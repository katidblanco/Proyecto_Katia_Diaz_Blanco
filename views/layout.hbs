  <!-- contacto formulario================================= -->

  <div class="container-fluid" style="background-color: rgba(10, 10, 10, 50%)">
    <div class="container">
      <br>
      <div class="row">
        <a class="seccion" href="/contacto">CONTÁCTANOS:</a>
      </div>
      <br>
      <div class="row">
        <form action="/" method="post">
          <div class="form-row">
            <div class="form-group col-md-8">
              <label for="nombre">Nombre:</label>
              <input type="text" class="form-control" id="nombre" placeholder="Nombre" name="nombre">
            </div>

            <div class="form-group col-md-8">
              <label for="apellido">Apellido:</label>
              <input type="text" class="form-control" id="apellido" placeholder="Apellido" name="apellido">
            </div>

            <div class="form-group col-md-8">
              <label for="email">Email:</label>
              <input type="email" class="form-control" id="email" placeholder="ejemplo@email.com" name="email">
            </div>

            <div class="form-group col-md-8">
              <label for="tel">Tel:</label>
              <input type="text" class="form-control" id="tel" placeholder="Teléfono" name="tel">
            </div>

            <div class="form-group col-md-8">
              <label for="mensaje">Mensaje:</label>
              <textarea class="form-control" id="mensaje" rows="4" name="mensaje"></textarea>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Enviar</button>
          </div>

        </form>

        {{#if message}}
        <p>{{message}}</p>
        {{/if}}
      </div>
      <br><br>
    </div>
